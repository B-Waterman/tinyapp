<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
    class="navbar-toggler"
    type="button"
    data-toggle="collapse"
    data-target="#navbarNavAltMarkup"
    aria-controls="navbarNavAltMarkup"
    aria-expanded="false"
    aria-label="Toggle navigation"
    >
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav mr-auto mt-2 mt-lg-0">
      <a class="nav-item nav-link" href="/urls">My URLs</a>
      <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
    </div>
      <!-- REGISTER+LOGIN/LOGOUT -->
      <div>
        <% if(user) { %>
          <form method="POST" action="/logout" class="form-inline">
            <div class="input-group-append mr-sm-2">
              <label>Logged In As: <%= user.email %></label>
              <button class="btn btn-info btn-outline-light" type="submit" style="margin: 1em">LOGOUT</button>
            </div>
          </form>
        <% } else { %>
          <div class="btn-group" role="group" aria-label="register, login/logout">
            <a href="/register">
            <button value="Submit" class="btn btn-info btn-outline-light" type="submit">REGISTER</button></a>
              <div class="input-group-append">
              </div>
            <a href="/login">
            <button value="Submit" class="btn btn-info btn-outline-light" type="submit">LOGIN</button></a>
              <div class="input-group-append">
              </div>
          </div>
        <% } %>
      </div>
  </nav>
</header>